<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.belman.presentation.usecases.worker.assignedorder.AssignedOrderViewController"
           prefHeight="600.0" prefWidth="800.0"
           styleClass="assigned-order-view, bg-light">

    <BorderPane>
        <!-- Header -->
        <top>
            <VBox spacing="10.0">
                <padding>
                    <Insets top="15.0" right="15.0" bottom="10.0" left="15.0"/>
                </padding>

                <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="header">
                    <!-- Belman Logo -->
                    <ImageView fitHeight="40.0" preserveRatio="true" styleClass="header-logo">
                        <Image url="@/com/belman/images/BELMAN_Logo_264pxl.png"/>
                    </ImageView>

                    <Label text="Assigned Order" styleClass="title-label"/>
                    <HBox HBox.hgrow="ALWAYS" />
                    <HBox alignment="CENTER" spacing="5.0">
                        <Label text="Worker:" styleClass="worker-label"/>
                        <Label fx:id="workerNameLabel" text="John Doe" styleClass="worker-name, text-primary, text-bold"/>
                    </HBox>
                    <Button fx:id="logoutButton" text="Logout" styleClass="button-secondary"/>
                </HBox>

                <!-- Status and Error Messages -->
                <HBox fx:id="errorContainer" spacing="10.0" styleClass="error-container" visible="false">
                    <padding>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                    </padding>
                    <ImageView styleClass="error-icon" fitHeight="24.0" preserveRatio="true">
                        <Image url="@/com/belman/assets/icons/warning.svg"/>
                    </ImageView>
                    <Label fx:id="errorLabel" text="" styleClass="error-message" wrapText="true"/>
                </HBox>
            </VBox>
        </top>

        <!-- Main Content -->
        <center>
            <ScrollPane fitToWidth="true" styleClass="content-scroll">
                <VBox spacing="24.0" styleClass="card-container">
                    <padding>
                        <Insets top="24.0" right="24.0" bottom="24.0" left="24.0"/>
                    </padding>

                    <!-- Order Details Card -->
                    <VBox spacing="15.0" styleClass="card, order-details-card">
                        <padding>
                            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                        </padding>

                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <Label text="Order Details" styleClass="section-title"/>
                            <HBox HBox.hgrow="ALWAYS" />
                            <Label fx:id="orderNumberLabel" text="ORD-123-230615-WLD-0001" 
                                   styleClass="order-number, text-primary, text-bold"/>
                        </HBox>

                        <Separator />

                        <!-- Order Details Grid -->
                        <GridPane hgap="20.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints minWidth="100.0" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>

                            <!-- Customer -->
                            <Label text="Customer:" styleClass="detail-label, text-bold" 
                                   GridPane.rowIndex="0" GridPane.columnIndex="0" />
                            <Label fx:id="customerLabel" text="Acme Corporation" styleClass="detail-value" 
                                   GridPane.rowIndex="0" GridPane.columnIndex="1" />

                            <!-- Project -->
                            <Label text="Project:" styleClass="detail-label, text-bold" 
                                   GridPane.rowIndex="1" GridPane.columnIndex="0" />
                            <Label fx:id="projectLabel" text="Main Building Welding" styleClass="detail-value" 
                                   GridPane.rowIndex="1" GridPane.columnIndex="1" />

                            <!-- Location -->
                            <Label text="Location:" styleClass="detail-label, text-bold" 
                                   GridPane.rowIndex="2" GridPane.columnIndex="0" />
                            <Label fx:id="locationLabel" text="Building A, Floor 3" styleClass="detail-value" 
                                   GridPane.rowIndex="2" GridPane.columnIndex="1" />

                            <!-- Due Date -->
                            <Label text="Due Date:" styleClass="detail-label, text-bold" 
                                   GridPane.rowIndex="3" GridPane.columnIndex="0" />
                            <Label fx:id="dueDateLabel" text="2023-06-20" styleClass="detail-value" 
                                   GridPane.rowIndex="3" GridPane.columnIndex="1" />
                        </GridPane>

                        <!-- Order Description -->
                        <VBox spacing="8.0" styleClass="order-description">
                            <Label text="Description" styleClass="detail-label, text-bold"/>
                            <Label fx:id="descriptionLabel" 
                                   text="Document welding work on the main support beams. Ensure all safety protocols are followed and capture before/after photos." 
                                   wrapText="true" styleClass="body-text"/>
                        </VBox>
                    </VBox>

                    <!-- Photo Documentation Card -->
                    <VBox spacing="15.0" styleClass="card, photo-documentation-card">
                        <padding>
                            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                        </padding>

                        <Label text="Photo Documentation" styleClass="section-title"/>

                        <Separator />

                        <HBox spacing="20.0" alignment="CENTER_LEFT">
                            <!-- Camera icon -->
                            <ImageView styleClass="camera-icon" fitHeight="48.0" preserveRatio="true">
                                <Image url="@/com/belman/assets/icons/camera.svg"/>
                            </ImageView>

                            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                                <Label fx:id="photoCountLabel" text="5 photos required" 
                                       styleClass="photo-count, text-primary, text-bold"/>
                                <Label text="Click 'Start Photo Session' to begin documenting this order with photos." 
                                       wrapText="true" styleClass="photo-session-description, body-text"/>

                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <Label fx:id="statusLabel" text="Ready to start" 
                                           styleClass="status-label, text-secondary"/>
                                </HBox>
                            </VBox>
                        </HBox>

                        <HBox alignment="CENTER_RIGHT" spacing="20.0">
                            <!-- Dev mode button for manual order intake -->
                            <Button fx:id="createOrderButton" text="Create Test Order" 
                                    styleClass="button-secondary" visible="false"/>

                            <Button fx:id="startButton" text="Start Photo Session" 
                                    styleClass="button-primary, start-button"/>
                        </HBox>
                    </VBox>
                </VBox>
            </ScrollPane>
        </center>
    </BorderPane>

    <!-- Loading Overlay -->
    <StackPane fx:id="loadingPane" visible="false" styleClass="loading-overlay">
        <VBox alignment="CENTER" spacing="20.0" styleClass="loading-container">
            <ProgressBar styleClass="loading-progress" progress="-1.0"/>
            <Label text="Loading..." styleClass="loading-text"/>
        </VBox>
    </StackPane>
</StackPane>
