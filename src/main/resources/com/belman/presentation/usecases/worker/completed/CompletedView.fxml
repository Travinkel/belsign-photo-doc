<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.belman.presentation.usecases.worker.completed.CompletedViewController"
           prefHeight="600.0" prefWidth="400.0"
           styleClass="completed-view">
    
    <BorderPane>
        <!-- Header -->
        <top>
            <VBox spacing="10.0">
                <padding>
                    <Insets top="20.0" right="20.0" bottom="10.0" left="20.0"/>
                </padding>
                
                <HBox alignment="CENTER" spacing="10.0" styleClass="header">
                    <Label text="Upload Complete" styleClass="title-label"/>
                </HBox>
            </VBox>
        </top>
        
        <!-- Main Content -->
        <center>
            <VBox spacing="30.0" alignment="CENTER">
                <padding>
                    <Insets top="30.0" right="30.0" bottom="30.0" left="30.0"/>
                </padding>
                
                <!-- Success Icon -->
                <StackPane styleClass="success-icon-container">
                    <ImageView fx:id="successIcon" fitHeight="120.0" fitWidth="120.0" preserveRatio="true"/>
                </StackPane>
                
                <!-- Completion Message -->
                <Label text="Photos Uploaded Successfully!" styleClass="completion-label"/>
                
                <!-- Order Info -->
                <VBox spacing="10.0" styleClass="order-info" alignment="CENTER">
                    <Label fx:id="orderNumberLabel" text="Order #: ORD-123-230615-WLD-0001" styleClass="order-number"/>
                    <Label fx:id="photoCountLabel" text="5 photos uploaded" styleClass="photo-count"/>
                    <Label fx:id="timestampLabel" text="Completed on: 2023-06-15 14:30" styleClass="timestamp-label"/>
                </VBox>
                
                <!-- Next Steps -->
                <VBox spacing="10.0" styleClass="next-steps">
                    <Label text="Next Steps" styleClass="section-title"/>
                    <Label text="Your photos have been uploaded and will be reviewed by the QA team. You will be notified when the review is complete." 
                           wrapText="true" styleClass="next-steps-text"/>
                </VBox>
                
                <!-- Summary -->
                <VBox spacing="5.0" styleClass="summary-container">
                    <Label text="Summary" styleClass="section-title"/>
                    <HBox spacing="20.0" alignment="CENTER">
                        <VBox alignment="CENTER" styleClass="summary-item">
                            <Label text="Photos" styleClass="summary-label"/>
                            <Label fx:id="totalPhotosLabel" text="5" styleClass="summary-value"/>
                        </VBox>
                        <VBox alignment="CENTER" styleClass="summary-item">
                            <Label text="Metadata" styleClass="summary-label"/>
                            <Label fx:id="metadataLabel" text="Complete" styleClass="summary-value"/>
                        </VBox>
                        <VBox alignment="CENTER" styleClass="summary-item">
                            <Label text="Status" styleClass="summary-label"/>
                            <Label fx:id="statusLabel" text="Pending Review" styleClass="summary-value"/>
                        </VBox>
                    </HBox>
                </VBox>
            </VBox>
        </center>
        
        <!-- Footer -->
        <bottom>
            <HBox alignment="CENTER" spacing="20.0">
                <padding>
                    <Insets top="10.0" right="10.0" bottom="30.0" left="10.0"/>
                </padding>
                
                <Button fx:id="homeButton" text="Back to Home" styleClass="home-button"/>
            </HBox>
        </bottom>
    </BorderPane>
</StackPane>