<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.belman.presentation.usecases.login.UserSelectionDialogController"
           prefWidth="400.0" prefHeight="500.0"
           styleClass="dialog-container">

    <VBox spacing="15.0" styleClass="dialog-content">
        <padding>
            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
        </padding>

        <!-- Header -->
        <Label text="Available Users" styleClass="dialog-title"/>
        <Label text="Select a user to auto-fill login credentials" styleClass="dialog-subtitle"/>

        <Separator/>

        <!-- User List -->
        <Label text="Active Users:" styleClass="section-label"/>
        <ListView fx:id="activeUsersList" VBox.vgrow="ALWAYS" styleClass="users-list"/>

        <Label text="Inactive Users:" styleClass="section-label"/>
        <ListView fx:id="inactiveUsersList" VBox.vgrow="ALWAYS" styleClass="users-list"/>

        <!-- Footer -->
        <Separator/>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <Button fx:id="closeButton" text="Close" styleClass="dialog-button" onAction="#handleClose"/>
        </HBox>
    </VBox>
</StackPane>
