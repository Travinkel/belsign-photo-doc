<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.belman.presentation.usecases.qa.assignment.QAOrderAssignmentViewController"
           prefHeight="600.0" prefWidth="400.0"
           styleClass="qa-order-assignment-view">

    <BorderPane>
        <!-- Header -->
        <top>
            <VBox spacing="10.0">
                <padding>
                    <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                </padding>

                <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="header">
                    <Label text="Assign Orders to Production Workers" styleClass="title-label"/>
                    <HBox HBox.hgrow="ALWAYS" />
                    <Button fx:id="backButton" text="Back" onAction="#handleBack"/>
                    <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout"/>
                </HBox>

                <!-- Status Message -->
                <Label fx:id="statusLabel" styleClass="status-label" wrapText="true"/>
            </VBox>
        </top>

        <!-- Main Content -->
        <center>
            <VBox spacing="20.0">
                <padding>
                    <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                </padding>

                <!-- Orders Section -->
                <VBox spacing="10.0">
                    <Label text="Select an Order" styleClass="section-title"/>
                    <TextField fx:id="orderSearchField" promptText="Search orders..."/>
                    <ListView fx:id="ordersListView" VBox.vgrow="ALWAYS">
                        <placeholder>
                            <Label text="No orders available"/>
                        </placeholder>
                    </ListView>
                </VBox>

                <!-- Production Workers Section -->
                <VBox spacing="10.0">
                    <Label text="Select a Production Worker" styleClass="section-title"/>
                    <TextField fx:id="workerSearchField" promptText="Search workers..."/>
                    <ListView fx:id="workersListView" VBox.vgrow="ALWAYS">
                        <placeholder>
                            <Label text="No production workers available"/>
                        </placeholder>
                    </ListView>
                </VBox>

                <!-- Assignment Button -->
                <HBox alignment="CENTER">
                    <Button fx:id="assignButton" text="Assign Order to Worker" onAction="#handleAssign" 
                            styleClass="primary-button"/>
                </HBox>

                <!-- Error Message -->
                <Label fx:id="errorLabel" styleClass="error-label" wrapText="true"/>
            </VBox>
        </center>
    </BorderPane>
</StackPane>