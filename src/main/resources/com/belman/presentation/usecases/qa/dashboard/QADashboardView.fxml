<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.belman.presentation.usecases.qa.dashboard.QADashboardViewController"
           prefHeight="600.0" prefWidth="400.0"
           styleClass="qa-dashboard-view">

    <BorderPane>
        <!-- Header -->
        <top>
            <VBox spacing="10.0">
                <padding>
                    <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                </padding>

                <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="header">
                    <Label text="QA Dashboard" styleClass="title-label"/>
                    <HBox HBox.hgrow="ALWAYS" />
                    <Button fx:id="logoutButton" text="Logout" styleClass="logout-button" onAction="#handleLogout"/>
                </HBox>

                <!-- Search and Filter -->
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <TextField fx:id="searchField" promptText="Search orders..." HBox.hgrow="ALWAYS"/>
                    <ComboBox fx:id="statusFilter" promptText="Filter by status"/>
                </HBox>
            </VBox>
        </top>

        <!-- Order List -->
        <center>
            <VBox spacing="10.0">
                <padding>
                    <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                </padding>

                <Label text="Orders Pending Review" styleClass="section-title"/>

                <ListView fx:id="pendingOrdersListView" VBox.vgrow="ALWAYS">
                    <placeholder>
                        <Label text="No orders pending review"/>
                    </placeholder>
                </ListView>

                <!-- Action Buttons -->
                <HBox spacing="10.0" alignment="CENTER">
                    <Button fx:id="reviewPhotosButton" text="Review Photos" onAction="#handleReviewPhotos"/>
                    <Button fx:id="assignOrderButton" text="Assign Order" onAction="#handleAssignOrder"/>
                    <Button fx:id="generateReportButton" text="Generate Report" onAction="#handleGenerateReport"/>
                </HBox>

                <!-- Error Message -->
                <Label fx:id="errorLabel" styleClass="error-label" wrapText="true"/>
            </VBox>
        </center>

        <!-- Footer -->
        <bottom>
            <HBox alignment="CENTER" spacing="10.0">
                <padding>
                    <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                </padding>

                <Label fx:id="pendingCountLabel" text="Pending: 0"/>
                <Label fx:id="approvedCountLabel" text="Approved: 0"/>
                <Label fx:id="rejectedCountLabel" text="Rejected: 0"/>
            </HBox>
        </bottom>
    </BorderPane>
</StackPane>
