<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.belman.presentation.usecases.qa.summary.ApprovalSummaryViewController"
           prefHeight="600.0" prefWidth="400.0"
           styleClass="approval-summary-view">
    
    <BorderPane>
        <!-- Header -->
        <top>
            <VBox spacing="10.0">
                <padding>
                    <Insets top="20.0" right="20.0" bottom="10.0" left="20.0"/>
                </padding>
                
                <HBox alignment="CENTER" spacing="10.0" styleClass="header">
                    <Label text="Approval Summary" styleClass="title-label"/>
                </HBox>
            </VBox>
        </top>
        
        <!-- Main Content -->
        <center>
            <VBox spacing="20.0" alignment="CENTER">
                <padding>
                    <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                </padding>
                
                <!-- Status Icon -->
                <StackPane styleClass="status-icon-container">
                    <ImageView fx:id="statusIcon" fitHeight="100.0" fitWidth="100.0" preserveRatio="true"/>
                </StackPane>
                
                <!-- Status Message -->
                <Label fx:id="statusLabel" text="Photos have been approved!" styleClass="status-label"/>
                
                <!-- Order Info -->
                <VBox spacing="5.0" styleClass="order-info">
                    <Label fx:id="orderNumberLabel" text="Order #: ORD-123" styleClass="order-number"/>
                    <Label fx:id="photoCountLabel" text="5 photos processed" styleClass="photo-count"/>
                </VBox>
                
                <!-- Comments -->
                <VBox spacing="5.0">
                    <Label text="QA Comments" styleClass="section-title"/>
                    <TextArea fx:id="commentsTextArea" editable="false" wrapText="true" prefHeight="100.0"/>
                </VBox>
                
                <!-- Next Steps -->
                <VBox spacing="5.0" styleClass="next-steps">
                    <Label text="Next Steps" styleClass="section-title"/>
                    <Label fx:id="nextStepsLabel" text="The order has been marked as approved and will be processed for delivery." wrapText="true"/>
                </VBox>
            </VBox>
        </center>
        
        <!-- Footer -->
        <bottom>
            <HBox alignment="CENTER" spacing="20.0">
                <padding>
                    <Insets top="10.0" right="10.0" bottom="20.0" left="10.0"/>
                </padding>
                
                <Button fx:id="continueButton" text="Continue" styleClass="continue-button"/>
            </HBox>
        </bottom>
    </BorderPane>
</StackPane>