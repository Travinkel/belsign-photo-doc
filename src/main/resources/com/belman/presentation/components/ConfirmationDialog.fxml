<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.belman.presentation.components.ConfirmationDialogController"
           fx:id="confirmationDialog"
           styleClass="confirmation-dialog-overlay"
           visible="false">
    <VBox alignment="CENTER" spacing="20.0" styleClass="confirmation-dialog">
        <padding>
            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
        </padding>
        <Label fx:id="titleLabel" text="Confirmation" styleClass="confirmation-title"/>
        <Label fx:id="messageLabel" text="Are you sure you want to proceed?" 
               wrapText="true" textAlignment="CENTER" styleClass="confirmation-message"/>
        <HBox alignment="CENTER" spacing="15.0" styleClass="confirmation-buttons">
            <Button fx:id="cancelButton" text="Cancel" styleClass="button-secondary" 
                    onAction="#handleCancel"/>
            <Button fx:id="confirmButton" text="Confirm" styleClass="button-primary" 
                    onAction="#handleConfirm"/>
        </HBox>
    </VBox>
</StackPane>