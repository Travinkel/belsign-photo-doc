<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<StackPane xmlns:fx="http://javafx.com/fxml/1"
           fx:id="root"
           styleClass="login-background-container, responsive-container"
           xmlns="http://javafx.com/javafx/11.0.14-internal"
           fx:controller="com.belman.presentation.views.login.LoginViewController"
           stylesheets="@../../../styles/app.css">


    <!-- Background Image with Aspect Ratio Preservation -->
    <ImageView fx:id="backgroundImage" preserveRatio="true" styleClass="login-background-image, responsive-image">
        <Image url="@../../../images/loginBackground.png"/>
    </ImageView>

    <!-- Semi-transparent overlay -->
    <Region style="-fx-background-color: rgba(0, 0, 0, 0.5);" styleClass="background-overlay"/>

    <!-- Login Card Container -->
    <StackPane alignment="CENTER" styleClass="responsive-container">
        <VBox fx:id="loginCard" alignment="CENTER" spacing="15.0" styleClass="login-card">
            <!-- Card Shadow Effect -->
            <effect>
                <DropShadow radius="15" spread="0.1">
                    <color>
                        <Color opacity="0.6"/>
                    </color>
                </DropShadow>
            </effect>

            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
            </padding>

            <!-- Company Logo -->
            <ImageView fitHeight="80" fitWidth="120" preserveRatio="true" styleClass="login-logo, responsive-image">
                <Image url="@../../../images/logo.png"/>
                <VBox.margin>
                    <Insets bottom="5.0"/>
                </VBox.margin>
            </ImageView>

            <Label styleClass="login-title" text="BelSign Login">
                <font>
                    <Font name="System Bold" size="22.0"/>
                </font>
            </Label>

            <VBox alignment="CENTER" fillWidth="true" spacing="12.0" styleClass="login-form">
                <!-- Authentication Method Selection -->
                <HBox alignment="CENTER" spacing="10.0" styleClass="auth-method-container">
                    <Button fx:id="scanButton" minHeight="60" minWidth="150"
                            styleClass="auth-method-button, button-secondary" text="Scan Keychain"/>
                    <Button fx:id="pinButton" minHeight="60" minWidth="150"
                            styleClass="auth-method-button, button-secondary" text="Use PIN Code"/>
                </HBox>

                <!-- PIN Code Login Form (initially hidden) -->
                <VBox fx:id="pinCodeForm" alignment="CENTER" fillWidth="true" managed="false" spacing="10.0"
                      visible="false">
                    <Label styleClass="pin-label" text="Enter PIN Code"/>
                    <TextField fx:id="pinCodeField" alignment="CENTER" maxWidth="200" promptText="PIN Code"
                               styleClass="pin-field" editable="false"/>

                    <!-- Numpad for PIN entry -->
                    <GridPane alignment="CENTER" hgap="10" vgap="10">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>

                        <!-- Row 1: 1, 2, 3 -->
                        <Button text="1" styleClass="pin-button" onAction="#handlePinButtonPressed" prefWidth="60"
                                prefHeight="60" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Button text="2" styleClass="pin-button" onAction="#handlePinButtonPressed" prefWidth="60"
                                prefHeight="60" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        <Button text="3" styleClass="pin-button" onAction="#handlePinButtonPressed" prefWidth="60"
                                prefHeight="60" GridPane.columnIndex="2" GridPane.rowIndex="0"/>

                        <!-- Row 2: 4, 5, 6 -->
                        <Button text="4" styleClass="pin-button" onAction="#handlePinButtonPressed" prefWidth="60"
                                prefHeight="60" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <Button text="5" styleClass="pin-button" onAction="#handlePinButtonPressed" prefWidth="60"
                                prefHeight="60" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <Button text="6" styleClass="pin-button" onAction="#handlePinButtonPressed" prefWidth="60"
                                prefHeight="60" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

                        <!-- Row 3: 7, 8, 9 -->
                        <Button text="7" styleClass="pin-button" onAction="#handlePinButtonPressed" prefWidth="60"
                                prefHeight="60" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <Button text="8" styleClass="pin-button" onAction="#handlePinButtonPressed" prefWidth="60"
                                prefHeight="60" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        <Button text="9" styleClass="pin-button" onAction="#handlePinButtonPressed" prefWidth="60"
                                prefHeight="60" GridPane.columnIndex="2" GridPane.rowIndex="2"/>

                        <!-- Row 4: Clear, 0, Backspace -->
                        <Button text="Clear" styleClass="pin-button, pin-clear-button" onAction="#handlePinClearPressed"
                                prefWidth="60" prefHeight="60" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <Button text="0" styleClass="pin-button" onAction="#handlePinButtonPressed" prefWidth="60"
                                prefHeight="60" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        <Button text="âŒ«" styleClass="pin-button, pin-backspace-button"
                                onAction="#handlePinBackspacePressed" prefWidth="60" prefHeight="60"
                                GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                    </GridPane>
                </VBox>

                <!-- Camera Scan Form (initially hidden) -->
                <VBox fx:id="cameraScanForm" alignment="CENTER" fillWidth="true" managed="false" spacing="10.0"
                      visible="false">
                    <Label styleClass="scan-label" text="Scan your keychain barcode"/>

                    <!-- Mock camera preview for testing on laptops -->
                    <StackPane fx:id="cameraPreviewContainer" prefHeight="200" prefWidth="300"
                               style="-fx-background-color: #333333; -fx-background-radius: 8px;" managed="false"
                               visible="false">
                        <ImageView fx:id="cameraPreviewImage" fitHeight="200" fitWidth="300" preserveRatio="true"/>
                        <Label text="Camera Preview" textFill="WHITE"/>
                    </StackPane>

                    <HBox alignment="CENTER" spacing="10">
                        <Button fx:id="startScanButton" minHeight="40" minWidth="150"
                                styleClass="start-scan-button, button-primary" text="Start Camera"/>
                        <Button fx:id="mockScanSuccessButton" minHeight="40" minWidth="150"
                                styleClass="mock-scan-button, button-secondary" text="Simulate Successful Scan"
                                managed="false" visible="false"/>
                    </HBox>
                </VBox>

                <Region maxHeight="15" minHeight="15" VBox.vgrow="ALWAYS"/>

                <!-- Error message label - Only visible when there's an error -->
                <Label fx:id="errorMessageLabel" alignment="CENTER" maxWidth="Infinity" minHeight="40"
                       styleClass="login-error" textFill="RED" wrapText="true"
                       visible="false"/>

                <!-- Buttons Container with Proper Alignment -->
                <HBox alignment="CENTER" spacing="15.0" styleClass="login-buttons-container">
                    <ProgressIndicator fx:id="loginProgressIndicator" visible="false"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="cancelButton" minWidth="100" styleClass="login-cancel-button" text="Cancel"/>
                    <Button fx:id="loginButton" defaultButton="true" minWidth="100"
                            styleClass="login-button, button-primary" text="Login"/>
                </HBox>
            </VBox>
        </VBox>

        <!-- Responsive margins -->
        <StackPane.margin>
            <Insets left="20.0" right="20.0"/>
        </StackPane.margin>
    </StackPane>
</StackPane>
