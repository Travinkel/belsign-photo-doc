<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.belman.presentation.views.login.LoginViewController" styleClass="login-container"
      fillWidth="true" maxWidth="600">
    <padding>
        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
    </padding>

    <Label text="BelSign Login" styleClass="login-title">
        <font>
            <Font name="System Bold" size="22.0" />
        </font>
    </Label>

    <VBox spacing="8.0" alignment="CENTER" styleClass="login-form" fillWidth="true">
        <Label text="Username" styleClass="login-label" />
        <TextField fx:id="usernameField" promptText="Enter username" styleClass="login-field" maxWidth="Infinity" />

        <Label text="Password" styleClass="login-label" />
        <PasswordField fx:id="passwordField" promptText="Enter password" styleClass="login-field" maxWidth="Infinity" />

        <HBox alignment="CENTER_LEFT" spacing="5.0">
            <CheckBox fx:id="rememberMeCheckBox" text="Remember Me" styleClass="login-remember-me" />
        </HBox>

        <Label fx:id="errorMessageLabel" styleClass="login-error" textFill="RED" wrapText="true" maxWidth="Infinity" />

        <HBox alignment="CENTER" spacing="10.0" fillHeight="true">
            <ProgressIndicator fx:id="loginProgressIndicator" visible="false" />
            <Button fx:id="cancelButton" text="Cancel" styleClass="login-cancel-button" minWidth="80" />
            <Button fx:id="loginButton" text="Login" styleClass="login-button" defaultButton="true" minWidth="80" />
        </HBox>
    </VBox>
</VBox>
