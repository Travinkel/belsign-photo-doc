<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.belman.presentation.usecases.admin.dashboard.AdminDashboardViewController"
           prefHeight="600.0" prefWidth="400.0"
           styleClass="admin-dashboard-view">
    
    <VBox spacing="10.0">
        <padding>
            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
        </padding>
        
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="header">
            <Label text="Admin Dashboard" styleClass="title-label"/>
            <HBox HBox.hgrow="ALWAYS" />
            <Button fx:id="logoutButton" text="Logout" styleClass="logout-button"/>
        </HBox>
        
        <!-- Dashboard Content -->
        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
            <VBox spacing="20.0">
                <padding>
                    <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                </padding>
                
                <!-- User Management Section -->
                <VBox spacing="10.0" styleClass="section">
                    <Label text="User Management" styleClass="section-title"/>
                    <Button fx:id="userManagementButton" text="Manage Users" styleClass="action-button"/>
                </VBox>
                
                <!-- System Statistics Section -->
                <VBox spacing="10.0" styleClass="section">
                    <Label text="System Statistics" styleClass="section-title"/>
                    <GridPane hgap="10.0" vgap="10.0">
                        <Label text="Total Users:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label fx:id="totalUsersLabel" text="0" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        
                        <Label text="Active Orders:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <Label fx:id="activeOrdersLabel" text="0" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        
                        <Label text="Completed Orders:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <Label fx:id="completedOrdersLabel" text="0" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        
                        <Label text="Pending Reviews:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <Label fx:id="pendingReviewsLabel" text="0" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                    </GridPane>
                </VBox>
                
                <!-- System Actions Section -->
                <VBox spacing="10.0" styleClass="section">
                    <Label text="System Actions" styleClass="section-title"/>
                    <Button fx:id="backupButton" text="Backup Database" styleClass="action-button"/>
                    <Button fx:id="exportButton" text="Export Reports" styleClass="action-button"/>
                    <Button fx:id="settingsButton" text="System Settings" styleClass="action-button"/>
                </VBox>
            </VBox>
        </ScrollPane>
    </VBox>
</StackPane>