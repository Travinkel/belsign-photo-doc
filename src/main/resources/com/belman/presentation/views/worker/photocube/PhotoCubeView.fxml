<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.belman.presentation.usecases.worker.photocube.PhotoCubeViewController"
           prefHeight="600.0" prefWidth="400.0"
           styleClass="photo-cube-view">
    
    <BorderPane>
        <!-- Header -->
        <top>
            <VBox spacing="10.0">
                <padding>
                    <Insets top="15.0" right="15.0" bottom="10.0" left="15.0"/>
                </padding>
                
                <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="header">
                    <Button fx:id="backButton" text="Back" styleClass="back-button"/>
                    <Label text="Photo Session" styleClass="title-label"/>
                </HBox>
                
                <!-- Order Info -->
                <HBox spacing="10.0" styleClass="order-info">
                    <Label text="Order:" styleClass="order-label"/>
                    <Label fx:id="orderNumberLabel" text="ORD-123-230615-WLD-0001" styleClass="order-number"/>
                </HBox>
                
                <!-- Progress -->
                <VBox spacing="5.0">
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Label text="Progress:" styleClass="progress-label"/>
                        <Label fx:id="progressLabel" text="1/5 photos" styleClass="progress-value"/>
                    </HBox>
                    <ProgressBar fx:id="progressBar" progress="0.2" prefWidth="Infinity"/>
                </VBox>
            </VBox>
        </top>
        
        <!-- Main Content -->
        <center>
            <ScrollPane fitToWidth="true" styleClass="content-scroll">
                <VBox spacing="15.0">
                    <padding>
                        <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
                    </padding>
                    
                    <!-- Current Photo Template -->
                    <VBox spacing="10.0" styleClass="current-template">
                        <Label text="Current Photo" styleClass="section-title"/>
                        
                        <HBox spacing="10.0">
                            <Label text="Type:" styleClass="template-label"/>
                            <Label fx:id="photoTypeLabel" text="Before Work" styleClass="template-value"/>
                        </HBox>
                        
                        <Label fx:id="photoDescriptionLabel" text="Capture the area before any welding work begins. Ensure the entire support beam is visible." wrapText="true"/>
                        
                        <!-- Template Image -->
                        <StackPane styleClass="template-image-container">
                            <ImageView fx:id="templateImageView" fitWidth="350.0" preserveRatio="true"/>
                            <Label fx:id="noImageLabel" text="No template image available" visible="false"/>
                        </StackPane>
                    </VBox>
                    
                    <!-- Checklist -->
                    <VBox spacing="10.0" styleClass="checklist">
                        <Label text="Photo Checklist" styleClass="section-title"/>
                        
                        <VBox spacing="5.0" styleClass="checklist-items">
                            <CheckBox fx:id="checkItem1" text="Area is well lit" selected="false"/>
                            <CheckBox fx:id="checkItem2" text="Subject is clearly visible" selected="false"/>
                            <CheckBox fx:id="checkItem3" text="Photo is in focus" selected="false"/>
                            <CheckBox fx:id="checkItem4" text="Required elements are included" selected="false"/>
                            <CheckBox fx:id="checkItem5" text="Safety equipment is visible" selected="false"/>
                        </VBox>
                    </VBox>
                    
                    <!-- Instructions -->
                    <VBox spacing="10.0" styleClass="instructions">
                        <Label text="Instructions" styleClass="section-title"/>
                        
                        <Label text="1. Ensure all checklist items are met" wrapText="true"/>
                        <Label text="2. Position camera according to template" wrapText="true"/>
                        <Label text="3. Hold steady and tap 'Capture Photo'" wrapText="true"/>
                        <Label text="4. Review the photo before proceeding" wrapText="true"/>
                    </VBox>
                </VBox>
            </ScrollPane>
        </center>
        
        <!-- Footer -->
        <bottom>
            <HBox alignment="CENTER" spacing="20.0">
                <padding>
                    <Insets top="15.0" right="15.0" bottom="20.0" left="15.0"/>
                </padding>
                
                <Button fx:id="captureButton" text="Capture Photo" styleClass="capture-button"/>
            </HBox>
        </bottom>
    </BorderPane>
</StackPane>