<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="com.belman.presentation.usecases.qa.summary.ApprovalSummaryViewController"
            styleClass="responsive-container, approval-summary-container"
            stylesheets="/com/belman/styles/app.css">

    <StackPane AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">

        <!-- Main Content -->
        <VBox spacing="30" styleClass="vbox" alignment="CENTER"
              maxWidth="Infinity" maxHeight="Infinity">

            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Approved Container (visible when order is approved) -->
            <VBox fx:id="approvedContainer" spacing="20" alignment="CENTER" styleClass="approved-container">
                <!-- Success Icon -->
                <StackPane styleClass="success-icon-container">
                    <Circle radius="50" fill="#338d71" styleClass="success-circle"/>
                    <Text text="✓" fill="WHITE" styleClass="success-checkmark">
                        <font>
                            <Font name="System Bold" size="60.0"/>
                        </font>
                    </Text>
                </StackPane>
                
                <Label text="Order Approved" styleClass="title">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
            </VBox>
            
            <!-- Rejected Container (visible when order is rejected) -->
            <VBox fx:id="rejectedContainer" spacing="20" alignment="CENTER" styleClass="rejected-container">
                <!-- Rejected Icon -->
                <StackPane styleClass="rejected-icon-container">
                    <Circle radius="50" fill="#d9534f" styleClass="rejected-circle"/>
                    <Text text="✗" fill="WHITE" styleClass="rejected-x">
                        <font>
                            <Font name="System Bold" size="60.0"/>
                        </font>
                    </Text>
                </StackPane>
                
                <Label text="Order Rejected" styleClass="title">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
            </VBox>

            <!-- Summary Message -->
            <Label fx:id="summaryMessageLabel" text="Order has been processed" 
                   styleClass="subtitle" wrapText="true" textAlignment="CENTER">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
            
            <!-- Order Number -->
            <Label fx:id="orderNumberLabel" text="" styleClass="order-number">
                <font>
                    <Font name="System Bold" size="16.0"/>
                </font>
            </Label>

            <!-- Comment Section (if provided) -->
            <VBox spacing="10" styleClass="comment-container">
                <Label text="Comment:" styleClass="form-label">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <TextArea fx:id="commentTextArea" editable="false" wrapText="true"
                          prefHeight="100" styleClass="comment-text-area"/>
            </VBox>

            <!-- Spacer -->
            <Region VBox.vgrow="ALWAYS"/>

            <!-- Action Button -->
            <Button fx:id="backToDashboardButton" text="Back to Dashboard" 
                    onAction="#handleBackToDashboard" styleClass="button-primary">
                <font>
                    <Font size="16.0"/>
                </font>
                <padding>
                    <Insets top="15" right="30" bottom="15" left="30"/>
                </padding>
            </Button>
        </VBox>
    </StackPane>
</AnchorPane>